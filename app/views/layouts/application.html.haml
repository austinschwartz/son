%html
  %head
    %title Scary or Not?
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel: "stylesheet", type: "text/css"}
    %link{href: "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", rel: "stylesheet", type: "text/css"}
    %link{href: "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/4.9.1/bootstrap-social.css", rel: "stylesheet", type: "text/css"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-controls" => "navbar", 
                                            "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: "/"} Scary or Not?
          #navbar.navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li{class: ("active" if current_page?(controller: 'movies', action: 'index'))}
                %a{href: "/movies"} Movies
              %li{class: ("active" if current_page?(controller: 'movies', action: 'new'))}
                %a{href: "/movies/new"} New
              %li
                - if current_user.nil?
                  %a{href: "/signin"} Sign in 
                - else
                  %a{href: "/signout"} Sign out
      .row
        .col-md-9.col-md-offset-1
          = yield
